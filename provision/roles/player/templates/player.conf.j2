# {{ ansible_managed }}

description "{{ app_name }}"

start on (filesystem)
stop on runlevel [016]

env STREAM="{{ app_host }}"

respawn
setuid {{ user }}
setgid {{ user }}
chdir {{ app_root }}

exec {{ app_path }}/bin/gunicorn {{ app_name }}:app --bind {{ app_bind }} --no-sendfile --access-logfile {{ app_root }}/player.access.log --error-logfile {{ app_root }}/player.error.log
